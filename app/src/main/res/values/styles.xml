<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppThemeLight" parent="Theme.AppCompat.Light">
        <item name="side_nav_bar">@drawable/side_nav_bar_light</item>
        <item name="toolbar_color">#F2E2CA</item>
        <item name="text_color">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        // change status bar color
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">#F2E2CA</item>
    </style>

    <style name="AppThemeLight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppThemeLight.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppThemeDark" parent="AppThemeDarkLib">
        <item name="side_nav_bar">@drawable/side_nav_bar_dark</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/black</item>
        <item name="toolbar_color">#80000000</item>
        <item name="text_color">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        // change status bar color
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/black</item>
    </style>

    <style name="AppThemeDark.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeDark.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="toolbar_bottom_icon_text" parent="toolbar_icon_text">
        <item name="android:layout_marginBottom">7dp</item>
        <item name="android:maxWidth">60dp</item>
        <item name="android:singleLine">true</item>
    </style>


</resources>
